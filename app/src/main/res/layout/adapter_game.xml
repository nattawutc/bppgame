<!--            android:id="@+id/img"-->
<!--            android:layout_width="180dp"-->
<!--            android:layout_height="187dp"-->
<!--            android:scaleType="centerCrop"-->
<!--            android:src="@drawable/speech" />-->


    </androidx.cardview.widget.CardView>

</FrameLayout>